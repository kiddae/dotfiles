#!/bin/bash
# so this is for arch linux as you might have seen
pacman -S xorg xorg-server xorg-xinit git i3-gaps mpd ncmpcpp ranger
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
yay -S polybar compton-tryone-git rxvt-unicode-256xresources urxvt-resize-font-git urxvt-perls otf-san-franscisco-mono ttf-font-awesome noto-fonts wpgtk vim-plug
git clone --bare https://github.com/ngynLk/dotfiles.git
alias config='/usr/bin/git --git-dir=$HOME/.cfg --work-tree=$HOME'
config checkout -f
config config --local status.showUntrackedFiles no
rm .bash_profile
sudo reboot
