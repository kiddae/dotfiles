[colors]
	background = "#282c34"
	foreground = "#abb2bf"

[global]
    ### Display ###
    follow = mouse

    geometry = "360-10-50"
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 5
    separator_height = 1
    padding = 24
    horizontal_padding = 24
    frame_width = 1
    outer_frame_width = 10

    frame_color = "#e06c75"
    outer_frame_color = "#282c34"
    separator_color = "#4b5263"
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = monospace 11
    line_height = 1

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = right
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 100
    icon_path = .icons/flattrcolor/status/24:.icons/flattrcolor/devices/48:.icons/flattrcolor/apps/scalable:.icons/flattrcolor/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period

[urgency_low]
    background =  "#282c34"
    frame_color = "#4b5263"
    timeout = 10

